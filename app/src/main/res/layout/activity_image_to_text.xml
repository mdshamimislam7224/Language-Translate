<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Image_To_Text">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/googleBannerAdsImageTotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                ads:adSize="FULL_BANNER"
                ads:adUnitId="@string/googleBannerAd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/imageSpinnerFrom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Select Language From"
                    android:drawableEnd="@drawable/ic__array_down"
                    android:layout_weight="1"
                    android:padding="5dp"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/image_show_ImageAndName_LayoutFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backround_gradient"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_for_show_imageToTextActivityFrom"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:paddingTop="10dp"
                        android:layout_gravity="start"
                        android:paddingBottom="10dp"
                        android:layout_height="40dp"
                        android:src="@drawable/flag_bangladesh"
                        />
                    <TextView
                        android:id="@+id/name_for_show_imageToTextActivityFrom"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Bangladesh"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_compare"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/imageSpinnerTo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Select Language To"
                    android:drawableEnd="@drawable/ic__array_down"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/image_show_ImageAndName_LayoutTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backround_gradient"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_for_show_imageToTextActivityTo"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:paddingTop="10dp"
                        android:layout_gravity="start"
                        android:paddingBottom="10dp"
                        android:layout_height="40dp"
                        android:src="@drawable/flag_bangladesh"
                        />
                    <TextView
                        android:id="@+id/name_for_show_imageToTextActivityTo"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:text="Bangladesh"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3sp"
                android:gravity="center_horizontal"
                android:text="Choose Image"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonclick"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/add_image"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/resultEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@null"
                android:hint="Click + button to add image"
                android:padding="5dp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seek_bar_pitch"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice Speed"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seek_bar_speed"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:progress="50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_speak"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="45sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/speak"
                    android:enabled="true" />
                <Button
                    android:id="@+id/button_Translate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Translate" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="45dp"/>
                <Button
                    android:id="@+id/clear_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Clear Text"
                    android:layout_height="45sp"
                    android:enabled="true" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/translatedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BDE8E6E6"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:hint="Translated Your Text Here"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice"
                android:textSize="16sp" />
            <SeekBar
                android:id="@+id/seek_bar_pitchTranslatedText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="50" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice Speed"
                android:textSize="16sp" />
            <SeekBar
                android:id="@+id/seek_bar_speedTranslatedText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:progress="50"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_speakTranslatedText"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/speak"
                    android:gravity="center_horizontal"
                    android:enabled="true"
                    android:layout_width="45sp"
                    android:layout_height="45sp" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Image View"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imageIv"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:maxHeight="250dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</ScrollView>