<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Image_To_Text">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3sp"
                    android:text="Image To Text"
                    android:textSize="30sp" />
                <Button
                    android:id="@+id/buttonclick"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/add_image"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="Result"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/resultEt"
                    android:layout_width="match_parent"
                    android:hint="Click + button to add image"
                    android:autoLink="all"
                    android:padding="5dp"
                    android:background="@null"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pitch"
                    android:textSize="16sp" />
                <SeekBar
                    android:id="@+id/seek_bar_pitch"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:progress="50" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textSize="16sp" />
                <SeekBar
                    android:id="@+id/seek_bar_speed"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:progress="50" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_speak"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/speak"
                        android:enabled="false"
                        android:layout_width="45sp"
                        android:layout_height="45sp" />
                    <Button
                        android:id="@+id/button_Translate"
                        android:layout_marginStart="100sp"
                        android:layout_width="wrap_content"
                        android:layout_height="45sp"
                        android:text="Translate Text"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
            </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/translatedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BDE8E6E6"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:text="Translated Your Text Here"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pitch"
                android:textSize="16sp" />
            <SeekBar
                android:id="@+id/seek_bar_pitchTranslatedText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="50" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                android:textSize="16sp" />
            <SeekBar
                android:id="@+id/seek_bar_speedTranslatedText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:progress="50"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_speakTranslatedText"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/speak"
                    android:gravity="center_horizontal"
                    android:enabled="false"
                    android:layout_width="45sp"
                    android:layout_height="45sp" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Image View"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imageIv"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:maxHeight="250dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</ScrollView>